{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VS Code Extension Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/extensions/vscode"
            },
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "VS Code Extension Test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/extensions/vscode"
            },
            "command": "npm",
            "args": [
                "run",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
