{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VS Code Extension Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/extensions/vscode"
            },
            "command": "npm",
            "args": [
                "run",
                "compile"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "VS Code Extension Watch",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/extensions/vscode"
            },
            "command": "npm",
            "args": [
                "run",
                "watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        },
        {
            "label": "VS Code Extension Test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/extensions/vscode"
            },
            "command": "npm",
            "args": [
                "run",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
