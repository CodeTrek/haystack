{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/main.go",
      "env": {},
      "args": [
        "--server"
      ],
      "showLog": true
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Haystack VS Code Extension",
      "cwd": "${workspaceFolder}/extensions/vscode",
			"runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extensions/vscode",
      ],
      "outFiles": [
          "${workspaceFolder}/extensions/vscode/out/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "env": {
        "IS_DEV": "true",
        "DEV_WORKSPACE_FOLDER": "${workspaceFolder}/extensions/vscode"
      },
     }
  ]
}
